<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnTaoTiengAnh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tạo 1 từ Tiếng Anh" />

    <TextView
        android:id="@+id/txtEnglish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Từ tiếng Anh ngẫu nhiên ở đây" />

    <Button
        android:id="@+id/btnGiongNoi1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhận dạng giọng nói với Google cách 1" />

    <TextView
        android:id="@+id/txtSpeechToText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="kết quả bạn nói tiếng anh ở đây" />

    <Button
        android:id="@+id/btnCach2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhân dạng giọng nói với Google Cách 2" />
</LinearLayout>